rules_version = '2';

// Firebase Storage Security Rules for User Profile Feature
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile photos - users can only read/write their own photos
    match /profile_photos/{userId}.jpg {
      // Allow read if authenticated
      allow read: if request.auth != null;
      
      // Allow write/update if authenticated and userId matches the current user
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      
      // Allow delete if authenticated and userId matches the current user
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
